<div class="col-xxl-2 col-xl-3 col-lg-4 col-sm-6">
  <div class="card shadow border-dark">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to event.name, event_path(event),
        class: 'link-dark text-decoration-none stretched-link' %>
      </h5>
      <p class="card-text mb-auto">
        <%= event.description %>
      </p>

    </div>
    <div class="card-footer">
      <div class="row gx-2">
        <div class="fw-bold text-end col-4">Location: </div>
        <div class="text-truncate col">
          <%= event.location %>
        </div>
      </div>
      <div class="row gx-2">
        <div class="fw-bold text-end col-4">Date: </div>
        <div class="text-truncate col">
          <%= event.date %>
        </div>
      </div>
      <div class="row gx-2">
        <div class="fw-bold text-end col-4">Creator: </div>
        <div class="text-truncate col">
          <%= event.host.username %>
        </div>
      </div>
    </div>
  </div>
</div>

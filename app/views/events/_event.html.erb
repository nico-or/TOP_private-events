<div class="card col-4 p-2">
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to event.name, event_path(event), class: 'link-dark text-decoration-none stretched-link' %>
    </h5>
  </div>
  <p class="card-text">
    <%= event.description %>
  </p>
  <p>
    <span class="fw-bold">Location: </span>
    <%= event.location %>
  </p>
  <p>
    <span class="fw-bold">Date: </span>
    <%= event.date %>
  </p>
</div>
